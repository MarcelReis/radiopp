{
  "name": "functions",
  "scripts": {
    "watch": "yarn build --watch",
    "build": "babel 'src' --out-dir 'src' --source-maps --extensions '.ts'",
    "serve": "yarn watch MODE='development' & yarn firebase emulators:start --only functions",
    "shell": "yarn watch && firebase functions:shell",
    "deploy": "yarn build && firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "8"
  },
  "main": "dist/index.js",
  "dependencies": {
    "@babel/preset-typescript": "^7.10.4",
    "apollo-server": "^2.16.1",
    "apollo-server-cloud-functions": "^2.16.1",
    "cors": "^2.8.5",
    "firebase-admin": "^8.13.0",
    "firebase-functions": "^3.6.1",
    "graphql": "^14.7.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "firebase-functions-test": "^0.2.0",
    "firebase-tools": "^8.9.2",
    "typescript": "^3.8.0"
  },
  "private": true
}
